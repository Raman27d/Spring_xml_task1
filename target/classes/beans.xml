<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!--     initially (id = "movie") -> name =" , "-->
    <bean name = "movie1, movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor" />
    </bean>

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="1" value="male" type="java.lang.String"/>
        <constructor-arg index="2" value="25" type="int"/>
        <constructor-arg index="0" value="Tom" type="java.lang.String"/>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor" >
        <constructor-arg value="Cruise" type="java.lang.String"/>
        <constructor-arg value="male" type="java.lang.String"/>
        <constructor-arg value="25" type="int"/>
    </bean>


</beans>